# PHP Casino Portal - Environment Variables Template

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=casino_portal
DB_USERNAME=root
DB_PASSWORD=your_password_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://bestcasinoportal.com
APP_NAME="Best Casino Portal"

# Security
APP_KEY=your_32_character_random_string
ENCRYPTION_METHOD=AES-256-CBC

# Cache Configuration
CACHE_DRIVER=file
SESSION_DRIVER=file

# CDN Configuration
CDN_URL=https://cdn.bestcasinoportal.com
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
GOOGLE_TAG_MANAGER_ID=your_gtm_id

# Affiliate Configuration
AFFILIATE_TRACKING=true
DEFAULT_AFFILIATE_ID=your_affiliate_id

# Content Generation
AI_CONTENT_ENABLED=true
AI_IMAGE_GENERATION=true
BATCH_PROCESSING=true

# Rate Limiting
API_RATE_LIMIT=100
OPENAI_RATE_LIMIT=60
