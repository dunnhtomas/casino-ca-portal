{
    "name": "bestcasinoportal/casino-portal",
    "description": "Best Casino Portal - Exact replica of casino.ca with AI-powered content generation",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Best Casino Portal Team",
            "email": "dev@bestcasinoportal.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.5",
        "twig/twig": "^3.4",
        "league/route": "^5.1",
        "illuminate/database": "^10.0",
        "intervention/image": "^2.7",
        "league/flysystem": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "CasinoPortal\\": "src/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse src",
        "cs": "phpcs src --standard=PSR12",
        "cbf": "phpcbf src --standard=PSR12",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
